<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:include filename="inertial_macros.xacro"/>

    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <!-- BASE LINK-->

    <link name="base_link">

    </link>

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="-0.11 0.0 0.0"/>
    </joint>

    <!-- CHASSIS LINK-->

    <link name="chassis">
        <visual>
            <origin xyz="0.11 0 0.090"/>
            <geometry>
                <box size="0.22 0.17 0.11"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0.11 0 0.090"/>
            <geometry>
                <box size="0.22 0.17 0.11"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.5" x="0.22" y="0.17" z="0.11">
        <origin xyz="0.11 0 0.090" rpy="0 0 0" />
        </xacro:inertial_box>
    </link>
    
    <gazebo reference="chassis">
        <material>Gazebo/White</material>
    </gazebo>

    <!-- LEFT WHEEL LINK-->

                <!-- FRONT -->

    <joint name="front_left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="front_left_wheel"/>
        <origin xyz="0.085 0.1 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0.0 0.0 1.0"/>
    </joint>

    <link name="front_left_wheel">
    <visual>
        <geometry>
            <cylinder radius="0.03" length="0.02"/>
        </geometry>
        <material name="blue"/>
    </visual>
    <collision>
        <geometry>
            <sphere radius="0.03"/>
        </geometry>
    </collision>
    <xacro:inertial_cylinder mass="0.1" length="0.02" radius="0.03">
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_cylinder>
    </link>

    <gazebo reference="front_left_wheel">
        <material>Gazebo/Blue</material>
    </gazebo>

                <!-- BACK -->

    <joint name="back_left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="back_left_wheel"/>
        <origin xyz="-0.085 0.1 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0.0 0.0 1.0"/>
    </joint>

    <link name="back_left_wheel">
    <visual>
        <geometry>
            <cylinder radius="0.03" length="0.02"/>
        </geometry>
        <material name="blue"/>
    </visual>
    <collision>
        <geometry>
            <sphere radius="0.03"/>
        </geometry>
    </collision>
    <xacro:inertial_cylinder mass="0.1" length="0.02" radius="0.03">
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_cylinder>
    </link>

    <gazebo reference="back_left_wheel">
        <material>Gazebo/Blue</material>
    </gazebo>



    <!-- RIGHT WHEEL LINK-->

            <!--FRONT-->
    <joint name="front_right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="front_right_wheel"/>
        <origin xyz="0.085 -0.1 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0.0 0.0 -1.0"/>
    </joint>

    <link name="front_right_wheel">
    <visual>
        <geometry>
            <cylinder radius="0.03" length="0.02"/>
        </geometry>
        <material name="blue"/>
    </visual>
    <collision>
        <geometry>
            <sphere radius="0.03"/>
        </geometry>
    </collision>
    <xacro:inertial_cylinder mass="0.1" length="0.02" radius="0.03">
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_cylinder>
    </link>
    <gazebo reference="front_right_wheel">
        <material>Gazebo/Blue</material>
    </gazebo>

            <!--BACK-->
    <joint name="back_right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="back_right_wheel"/>
        <origin xyz="-0.085 -0.1 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0.0 0.0 -1.0"/>
    </joint>

    <link name="back_right_wheel">
    <visual>
        <geometry>
            <cylinder radius="0.03" length="0.02"/>
        </geometry>
        <material name="blue"/>
    </visual>
    <collision>
        <geometry>
            <sphere radius="0.03"/>
        </geometry>
    </collision>
    <xacro:inertial_cylinder mass="0.1" length="0.02" radius="0.03">
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_cylinder>
    </link>
    <gazebo reference="back_right_wheel">
        <material>Gazebo/Blue</material>
    </gazebo>
</robot>